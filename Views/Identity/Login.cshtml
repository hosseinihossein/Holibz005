@model Identity_LoginModel

<!----------------------------------------------------------------->
<div id="formdfbde85c00554cf9b81e3299c9fa3204">
    <style>
        #formdfbde85c00554cf9b81e3299c9fa3204 {
            width: fit-content;
            min-width: 600px;
            overflow: hidden;
            margin: 70px auto 0;
            position: relative;
            box-shadow: 0 0 5px gray;
            border-radius: 5px;
        }

        #formdfbde85c00554cf9b81e3299c9fa3204 .form-container {
            color: #333;
            width: 80%;
            margin: 10% auto 5%;
            text-align: center;
        }

        #formdfbde85c00554cf9b81e3299c9fa3204 .form-container .header h1 {
            margin-bottom: 0;
        }

        #formdfbde85c00554cf9b81e3299c9fa3204 .form-container .header p {
            margin-top: 0;
        }

        #formdfbde85c00554cf9b81e3299c9fa3204 .form-container form {
            padding: 0 10%;
        }

        #formdfbde85c00554cf9b81e3299c9fa3204 .form-container form>div {
            position: relative;
        }

        #formdfbde85c00554cf9b81e3299c9fa3204 .form-container form input {
            padding: 10px 5px 10px 50px;
            font-size: 16px;
            background-color: transparent;
            border: 2px solid gray;
            border-radius: 5px;
            width: 100%;
            margin: 15px auto;
            color: #111;
        }

        #formdfbde85c00554cf9b81e3299c9fa3204 .form-container form input:focus {
            border: 2px solid black;
        }

        #formdfbde85c00554cf9b81e3299c9fa3204 .form-container form i {
            position: absolute;
            left: 5%;
            top: 23px;
            border-right: 1px solid gray;
            padding: 5px 10px 5px 0;
        }

        #formdfbde85c00554cf9b81e3299c9fa3204 .form-container form button i {
            position: static;
            border-right: none;
            padding: 0;
        }

        #formdfbde85c00554cf9b81e3299c9fa3204 .form-container form button {
            padding: 10px 20%;
            background-color: rgba(0, 0, 0, 0);
            border: 2px solid gray;
            border-radius: 2px;
            color: #111;
            font-weight: bold;
            font-size: 14px;
            cursor: pointer;
        }

        #formdfbde85c00554cf9b81e3299c9fa3204 .form-container form button:hover {
            border: 2px solid black;
        }

        #formdfbde85c00554cf9b81e3299c9fa3204 .links {
            text-decoration: none;
            color: #333;
            font-size: 12px;
            cursor: pointer;
        }

        #formdfbde85c00554cf9b81e3299c9fa3204 .links:hover {
            color: #111;
        }

        @@media screen and (max-width:700px) {
            #formdfbde85c00554cf9b81e3299c9fa3204 {
                width: 100%;
                min-width: 100px;
            }

            #formdfbde85c00554cf9b81e3299c9fa3204 .form-container {
                width: 80%;
            }
        }

                @@media screen and (max-width:600px) {
            #formdfbde85c00554cf9b81e3299c9fa3204 .form-container form {
                padding: 0 1%;
            }
        }
    </style>

    <!--img src="./statics/matrixGreenCode.webp" alt=""-->
    <div class="color-layout"></div>
    <div class="form-container">
        <div>
            <!--h1>LOGO</h1-->
            <a asp-controller="Home" asp-action="Index">
                <img style="width: 50px;height:50px;object-fit:cover;background-color:white;opacity:0.7;"
                    src="Images/HLlogo.jpg" alt="mglogo">
            </a>
        </div>
        <div class="header">
            <h1>Welcome Back!</h1>
            <p>Please login with your registered username or email address</p>
        </div>
        <form asp-action="SubmitLogin" method="post">
            <div asp-validation-summary="All" style="color: red;"></div>
            <input type="hidden" asp-for="ReturnUrl" />
            <div><span asp-validation-for="UsernameOrEmail" style="color: red;"></span></div>
            <div>
                <input asp-for="UsernameOrEmail" placeholder="Username or email">
                <i class="fa-regular fa-envelope"></i>
            </div>
            <div><span asp-validation-for="Password" style="color: red;"></span></div>
            <div class="password-div">
                <input type="password" asp-for="Password" placeholder="Password">
                <i class="fa-solid fa-unlock" style="cursor: pointer;"
                    onclick="this.previousElementSibling.type='text';this.nextElementSibling.style.display='inline';this.style.display='none';">
                </i>
                <i class="fa-solid fa-lock" style="display: none;cursor: pointer;"
                    onclick="this.previousElementSibling.previousElementSibling.type='password';this.previousElementSibling.style.display='inline';this.style.display='none';">
                </i>
            </div>
            <div class="clearfix" style="margin: 10px auto;">
                <div style="float: left;">
                    <style>
                        /* Customize the label (the container) */
                        #form2e6835bef3e147f0abe325bb1eeaeb44 .container {
                            display: block;
                            position: relative;
                            padding: 5px 0 5px 35px;
                            margin-bottom: 12px;
                            cursor: pointer;
                            font-size: 12px;
                            -webkit-user-select: none;
                            -moz-user-select: none;
                            -ms-user-select: none;
                            user-select: none;
                            text-align: left;
                        }

                        #form2e6835bef3e147f0abe325bb1eeaeb44 .container:hover {
                            color: #111;
                        }

                        /* Hide the browser's default checkbox */
                        #form2e6835bef3e147f0abe325bb1eeaeb44 .container input {
                            position: absolute;
                            opacity: 0;
                            cursor: pointer;
                            height: 0;
                            width: 0;
                        }

                        /* Create a custom checkbox */
                        #form2e6835bef3e147f0abe325bb1eeaeb44 .checkmark {
                            position: absolute;
                            top: 0;
                            left: 0;
                            height: 25px;
                            width: 25px;
                            /*background-color: #eee;*/
                            border: 2px solid #555;
                        }

                        #form2e6835bef3e147f0abe325bb1eeaeb44 .container:hover .checkmark {
                            border-color: #333;
                        }

                        /* Create the checkmark/indicator (hidden when not checked) */
                        #form2e6835bef3e147f0abe325bb1eeaeb44 .checkmark:after {
                            content: "";
                            position: absolute;
                            display: none;
                        }

                        /* Show the checkmark when checked */
                        #form2e6835bef3e147f0abe325bb1eeaeb44 .container input:checked~.checkmark:after {
                            display: block;
                        }

                        /* Style the checkmark/indicator */
                        #form2e6835bef3e147f0abe325bb1eeaeb44 .container .checkmark:after {
                            left: 7px;
                            top: 3px;
                            width: 5px;
                            height: 10px;
                            border: solid #333;
                            border-width: 0 3px 3px 0;
                            -webkit-transform: rotate(45deg);
                            -ms-transform: rotate(45deg);
                            transform: rotate(45deg);
                        }
                    </style>

                    <div id="form2e6835bef3e147f0abe325bb1eeaeb44">
                        <label for="IsPersistent" class="container">Stay logged in
                            <input asp-for="IsPersistent" id="IsPersistent" type="checkbox">
                            <span class="checkmark"></span>
                        </label>
                    </div>
                </div>

                <div class="cf-turnstile" data-sitekey="0x4AAAAAAAkeZ2wTzJxqgC_K"></div>

                <div style="float: right; text-align: right;padding: 3px 0;">
                    <a asp-action="ForgetPassword" class="links">I've forgotten my password</a>
                </div>
            </div>
            <div>
                <button type="submit">SIGN IN <i class="fa-solid fa-chevron-right"></i></button>
            </div>
        </form>
        <div class="link-container">
            <p style="font-size: 12px;">or</p>
            <a asp-action="Signup" class="links">Create a new account</a>
        </div>
    </div>
</div>